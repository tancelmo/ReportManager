<Application x:Class="ReportManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ReportManager"
             StartupUri="ViewModels\IniLoading.xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="StatusIndicator1"  Color="LimeGreen" />
            <SolidColorBrush x:Key="StatusIndicator2"  Color="LimeGreen" />
            <SolidColorBrush x:Key="StatusIndicator3"  Color="LimeGreen" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/Themes/LightTheme.xaml"/>
                <ResourceDictionary Source="Assets/Language/pt-BR.xaml"/>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Grey" SecondaryColor="LightBlue" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
        
    </Application.Resources>
    
</Application>
